#!/usr/bin/env bash

case "$1" in
        base)
            docker build --no-cache -f ./Dockerfile_base -t miracumpipe_base:latest ../
            ;;

        R)
            docker build --no-cache -f ./Dockerfile_R -t miracumpipe_r:latest ../
            ;;

        tools)
            docker build --no-cache -f ./Dockerfile_tools -t miracumpipe_tools:latest ../
            ;;

        interface)
            docker build --no-cache -f ./Dockerfile_interface -t miracumpipe:latest ../
            ;;
        all)
            docker build --no-cache -f ./Dockerfile_base -t miracumpipe_base:latest ../
            docker build --no-cache -f ./Dockerfile_R -t miracumpipe_r:latest ../
            docker build --no-cache -f ./Dockerfile_tools -t miracumpipe_tools:latest ../
            docker build --no-cache -f ./Dockerfile -t miracumpipe:latest ../
            ;;

        *)
            echo $"Usage: $0 {base|R|tools|interface|all} [args]"
            exit 1
esac