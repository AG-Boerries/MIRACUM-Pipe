#!/usr/bin/env bash

case "$1" in
        base)
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_base -t miracum_pipe_base:latest ../
            ;;

        R)
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_R -t miracum_pipe_r:latest ../
            ;;

        tools)
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_tools -t miracum_pipe_tools:latest ../
            ;;

        report)
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_report -t miracum_pipe_report:latest ../
            ;;

        interface)
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_interface -t miracum_pipe:latest ../
            ;;

        all)
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_base -t miracum_pipe_base:latest ../
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_R -t miracum_pipe_r:latest ../
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_tools -t miracum_pipe_tools:latest ../
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_report -t miracum_pipe_report:latest ../
            docker build --env HTTP_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --env HTTPS_PROXY="http://proxy.ibsm.uni-freiburg.de:8080" --no-cache -f ./Dockerfile_interface -t miracum_pipe:latest ../
            ;;

        *)
            echo $"Usage: $0 {base|R|tools|report|interface|all} [args]"
            exit 1
esac